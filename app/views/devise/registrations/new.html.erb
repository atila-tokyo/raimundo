<div class="container-sign-up w-100">
  <div class="box1">
    <h1 class="brand-logo"><strong>Raimundo</strong></h1>
    <h2 class="home-subtitle">Descomplique-se, viva mais!</h2>
  </div>
  <div class="box2 d-flex justify-content-center align-items-center ">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs mt-2">
        <!-- 
              <div class="input-group-sm mb-3 d-inline-flex">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="inputGroup-sizing-lg" style="display: inline !important;">
                    <i class="fas fa-user"></i>
                  </span>
                </div>  
                  <%= f.input :first_name, label: false, input_html: { placeholder: "ex: Raimundo", class: "form-control"} %>
              </div> 
            -->
        <%= f.input :first_name, input_html: { placeholder: "ex: Raimundo", class: "form-control"},
                label: add_tooltip_to_label("Nome", "Nome é necessário"), label_html: { class: "text-black" }
            
            %>
        <%= f.input :last_name, input_html: { placeholder: "ex: Nonato", class: "form-control" },
                label: "Sobrenome", label_html: { class: "text-black" }
            %>
        <%= f.input :email,
                        required: true,
                        autofocus: true
                        %>
        <%= f.input :username, input_html: { placeholder: "ex: raimundo_nonato" }, 
                label: "Nome de usuário", label_html: { class: "text-black" }
            %>
        <%= f.input :photo, as: :file, label: "Coloque um foto sua"
            %>
        <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" }, 
                        label: "Senha",
                        hint_html: { class: "text-black" }
                        %>
        <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        label: "Confirma sua senha"
                        %>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <div class="form-actions">
          <%= f.button :submit, "Cadastrar", class: "sign-up-form-btn btn btn-primary btn-lg" %>
        </div>
      </div>
      <div class="text-center p-1">
        <p>Já possui uma conta? <strong><%= link_to "Entrar", new_user_session_path %></strong></p>
      </div>
    <% end %>
  </div>
  <!--<%= render "devise/shared/links" %> -->
</div>
