<div class="container-sign-in w-100">

    <div class="box1">
      <h1 class="home-title"><strong>Raimundo</strong></h1>
      <h2 class="home-subtitle">Descomplique-se, viva mais!</h2>
    </div>

    <div class="box2 d-flex justify-content-center align-items-center ">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="d-flex justify-content-center align-items-center">
        <div class="form-actions">
          <%= f.button :submit, "Log in" ,class: "sign-in-form-btn btn btn-primary btn-lg" %>
        </div>
      </div>
  </div>

  <% end %>
    <!--<%= render "devise/shared/links" %>-->
</div>
 


