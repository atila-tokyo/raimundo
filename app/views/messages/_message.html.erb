<div class="message-container" id="message-<%= message.id %>">
  <% x = 0 %>
  <% if x.even?  %>
    <%= render 'messages/message_left', message: message %>
    <% x += 1 %>
  <% else %>
    <% render 'messages/message_right', message: message %>
  <% end %>
</div>
