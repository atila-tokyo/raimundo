<%= simple_form_for chatroom, method: :delete, url: guest_path(chatroom) do |f| %> 
    <%= f.input :users,  label: "Escolha seus amigos para remover", collection: (chatroom.users).map { |user| [user.username, user.id] },
        input_html: { multiple: true, class: "select2" }, include_hidden: false, label_html: { class: "usernames-chat" } %> 
    
    <div class="d-flex justify-content-between">
      <%= link_to "Voltar para a conversa",  chatroom_path(chatroom), class: 'btn-back btn btn-primary mt-2 mb-5'  %>
      <%= f.submit value: button_name, class: 'btn-create btn btn-success mt-2 mb-5 ml-5 w-50 on-change-edit' %>
    </div>
<% end %>
