<div class="d-flex justify-content-center links-style">
  <thead>
    <tr>
      <th scope="col">Nome da conversa</th>
      <th scope="col">Seus amigos no grupo</th>
      <th scope="col">Editar</th>
      <th scope="col">Deletar</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">
        <%= link_to chatroom.name, chatroom_path(chatroom) %>
      </th>
      <td>
        <%= chatroom.users.map(&:username).join(", ") %>
      </td>
      <td>
        <%= link_to edit_chatroom_path(chatroom), class: "" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </td>
      <td>
        <%= link_to chatroom_path(chatroom), method: :delete, data: { confirm: "Apagar Conversa?" } do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </td>
    </tr>
  </tbody>
</div>
