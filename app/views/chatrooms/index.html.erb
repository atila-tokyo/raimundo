<% if user_signed_in? %>
  <div class="container mt-5">
    <div class="row w-100">
      <div class="col-8 w-100">
        <%= link_to new_chatroom_path, class: "card-link home-cards" do %>
          <div class="card-logged w-75">
            <i class="card-icon fas fa-user-plus"></i>
            <h1 class="article-title">
              Crie uma nova conversa
            </h1>
          </div>
        <% end %>
      </div>
      <div class="col-4 w-100">
        <% if @result.present? %>
          <h1 class="your-chats reminder-title mb-5">Suas Conversas</h1>
          <% if policy(Chatroom) %>
            <table class="table table-dark">
              <% @result.each do |chatroom| %>
                <div>
                    <%= render "card_chatroom", chatroom: chatroom %>
                </div>
              <% end %>
            </table>
          <% end %>
        <% else %>
          <h2>NÃ£o tem conversas ainda</h2>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
