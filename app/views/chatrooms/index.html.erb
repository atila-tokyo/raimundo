<% if user_signed_in? %>
  <div class="container mt-5">
    <div class="row w-100">
      <div class="col-6 w-100">
        <%= link_to new_chatroom_path, class: "card-link home-cards" do %>
          <div class="card-logged w-75">
            <i class="card-icon fas fa-user-plus"></i>
            <h1 class="article-title">
              Crie uma nova conversa
            </h1>
          </div>
        <% end %>
      </div>
      <div class="col-6 w-100">
        <% if @result.present? %>
          <h1 class="your-chats reminder-title mb-5">Suas Conversas</h1>
          <% if policy(Chatroom) %>
            <table class="table table-dark links-style text-center">
              <thead>
                <tr>
                  <th scope="col">Nome da conversa</th>
                  <th scope="col">Seus amigos no grupo</th>
                  <% unless current_user.chatrooms.empty? %>
                    <th scope="col">Editar</th>
                    <th scope="col">Deletar</th>
                  <% end %>
                </tr>
              </thead>
              <% @result.each do |chatroom| %>
                  <%= render "card_chatroom", chatroom: chatroom %>
              <% end %>
            </table>
          <% end %>
        <% else %>
          <h2>NÃ£o tem conversas ainda</h2>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

