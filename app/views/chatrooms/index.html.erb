<% if user_signed_in? %>
  <div class="container mt-5">
    <div class="row w-100">
      <div class="col-8 w-100">
        <%= link_to new_chatroom_path, class: "card-link home-cards" do %>
          <div class="card-logged w-75">
            <i class="card-icon fas fa-user-plus"></i>
            <h1 class="article-title">
              Crie uma nova conversa
            </h1>
          </div>
        <% end %>
      </div>
      <div class="col-4 w-100">
        <% if @chatrooms.present? %>
          <h1 class="your-chats reminder-title mb-5">Suas Conversas</h1>
          <% if policy(Chatroom) %>
            <% @chatrooms.each do |chatroom| %>
              <div>
                <%= link_to chatroom_path(chatroom) do %>
                  <%= render "card_chatroom", chatroom: chatroom %>
                <% end %>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <% unless @member.empty? %>
          <% @member.each do |chatroom| %>
            <div>
              <%= link_to chatroom_path(chatroom) do %>
                <%= render "card_chatroom", chatroom: chatroom %>
              <% end %>
            </div>
          <% end %>
        <% end %>
        <% if @member.empty? && @chatrooms.empty? %>
          <h2>NÃ£o tem conversas ainda</h2>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
