<div class="d-flex">
  <div class="list-grou w-200px bg-white br-light">
    <% @chatrooms.each do |chatroom| %>
      <%= link_to "#{chatroom.name}", chatroom_path(chatroom), 
                class: "list-group-item #{'active' if chatroom == @chatroom}" 
            %>
    <% end %>
  </div>
  <div class="chatroom">
    <h1 class="text-center"><%= @chatroom.name %></h1>
    <div>
      <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
        <% @messages.each do |message| %>
          <%= render 'messages/message', message: message %>
        <% end %>
      </div>
      <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
        <%= f.input :content, label: false, placeholder: "Message: #{@chatroom.name}" %>
      <% end %>
    </div>
  </div>
</div>
